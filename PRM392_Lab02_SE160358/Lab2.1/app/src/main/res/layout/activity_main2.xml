<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ex1.MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ex1.MainActivity" tools:layout_editor_absoluteY="-149dp" tools:layout_editor_absoluteX="205dp">


        <TextView
            android:id="@+id/textViewFirstNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <EditText
            android:hint="Nhập số thứ nhất"

            android:id="@+id/editTextFirstNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.231"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            android:id="@+id/textViewSecondNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/editTextSecondNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập số thứ hai"
            android:ems="10"
            android:inputType="numberSigned"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextFirstNumber"
            app:layout_constraintVertical_bias="0.144"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="25dp"
            android:text="Result: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewResult"
            app:layout_constraintTop_toBottomOf="@+id/editTextSecondNumber"
            android:layout_marginTop="196dp" app:layout_constraintEnd_toEndOf="@+id/btnDivide"
            app:layout_constraintStart_toStartOf="@+id/btnMultiply" app:layout_constraintHorizontal_bias="0.504"/>

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Cộng"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/editTextSecondNumber"
            app:layout_constraintTop_toBottomOf="@+id/editTextSecondNumber"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="Trừ"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@+id/editTextSecondNumber"
            app:layout_constraintTop_toBottomOf="@+id/editTextSecondNumber"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nhân"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/btnAdd"
            app:layout_constraintTop_toBottomOf="@+id/btnAdd"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chia"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@+id/btnSubtract"
            app:layout_constraintTop_toBottomOf="@+id/btnSubtract"
            tools:ignore="TextSizeCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>